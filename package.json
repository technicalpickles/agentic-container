{
  "name": "agentic-container",
  "version": "1.0.0",
  "description": "Agentic container with comprehensive tooling and testing",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:yaml": "prettier --write '**/*.{yaml,yml}'",
