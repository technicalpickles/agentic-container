{
  "name": "agentic-container",
  "version": "1.0.0",
  "description": "Agentic container with comprehensive tooling and testing",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:yaml": "prettier --write '**/*.{yaml,yml}'",
    "format:markdown": "prettier --write '**/*.md'",
    "format:yaml:check": "prettier --check '**/*.{yaml,yml}'",
    "format:markdown:check": "prettier --check '**/*.md'",
    "validate-renovate": "./scripts/validate-renovate.sh",
    "validate-renovate:quick": "./scripts/validate-renovate.sh --quick",
    "validate-renovate:patterns": "./scripts/validate-renovate.sh --pattern-only"
  },
  "devDependencies": {
    "json5": "^2.2.3",
    "prettier": "^3.2.5",
    "renovate": "^41.121.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
